	if (curr_color.a > 0.25){
		COLOR = NEWCOLOR1;
	}
	if (curr_color.r > 0.45 && curr_color.g > 0.45 && curr_color.b > 0.45){
		COLOR = NEWCOLOR1;
	}
	else{
		COLOR = curr_color;
	}
